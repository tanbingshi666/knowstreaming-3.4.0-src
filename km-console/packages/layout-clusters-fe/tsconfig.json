{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "target": "es2015",
    "module": "esnext",
    "jsx": "react",
    "allowJs": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@src/*":["src/*"]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**",
    "dist/*",
    "examples/*",
    "src/packages/*"
  ],
}